{% extends 'CreditUnionBackendBundle::layout.html.twig' %}

{% block body -%}

<div class="row">
    <div class="col-lg-12">
        <h1>Financial institution details</h1>
        <ol class="breadcrumb">
            <li><a href="{{path('cr_backend_admin_index')}}"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li><a href="{{path('cr_backend_fininstitut_index')}}"><i class="fa fa-dashboard"></i> Financial institution list</a></li>
            <li class="active"><i class="fa fa-sitemap"></i> Financial institution details</li>
        </ol>
    </div>
</div><!-- /.row -->
<a class="btn btn-default pull-right" href="{{ path('cr_backend_fininstitut_index') }}">
    Back to the list
</a>
<div class="row">
    <div class="col-lg-6">
        <table class="table table-bordered table-hover tablesorter">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <a class="btn btn-primary" href="{{ path('cr_backend_fininstitut_edit', { 'id': entity.id }) }}">
            Edit
        </a>
        <form action="{{path('cr_backend_fininstitut_delete', {id: entity.getId()})}}" method="post" style="display:inline-block;">
            {{form_errors(delete_form)}}
            {{ form_widget(delete_form._token) }}
            <button class="btn btn-danger" name="form[submit]" id="form_submit" type="submit">Delete</button>
        </form>
    </div>
</div>
{% endblock %}
